# Playwright MCP Server Configuration
# Copy this file to .env and modify as needed

# Port for the MCP server to listen on
MCP_PORT=8931

# Browser configuration
BROWSER=chromium
HEADLESS=true

# Network configuration (optional)
# ALLOWED_ORIGINS=https://example.com;https://another-site.com
# BLOCKED_ORIGINS=https://blocked-site.com

# Output directory (relative to project root)
OUTPUT_DIR=./output

# User agent (optional)
# USER_AGENT=Mozilla/5.0 (compatible; PlaywrightMCP/1.0)

# Proxy configuration (optional)
# PROXY_SERVER=http://proxy:3128
# PROXY_BYPASS=.local,.internal

# Security settings
NO_SANDBOX=true
IGNORE_HTTPS_ERRORS=false

# Session settings
SAVE_SESSION=false
SAVE_TRACE=false
ISOLATED=false

# Capabilities (comma-separated: vision,pdf,tabs,install)
# CAPABILITIES=pdf,tabs

# Device emulation (optional)
# DEVICE=iPhone 15

# Viewport size (optional)
# VIEWPORT_SIZE=1280,720



